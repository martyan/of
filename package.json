{
    "name": "nextbase",
    "version": "0.1.0",
    "description": "Minimalistic serverless boilerplate based on NextJS and Firebase",
    "main": "index.js",
    "scripts": {
        "dev": "node \"./src/functions/devServer.js\"",
        "preserve": "npm run build-all && npm run copy-deps && npm run install-deps",
        "serve": "cross-env NODE_ENV=production firebase serve",
        "predeploy": "npm run build-all && npm run copy-deps",
        "deploy": "firebase deploy",
        "clean": "rimraf \"dist/functions/**\" && rimraf \"dist/public\"",
        "build-all": "npm run build-public && npm run build-funcs && npm run build-next",
        "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C",
        "build-funcs": "babel \"src/functions\" --out-dir \"dist/functions\"",
        "build-next": "next build \"src/app/\"",
        "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C",
        "install-deps": "cd \"dist/functions\" && npm i"
    },
    "engines": {
        "node": "8"
    },
    "author": "Martin Juzl",
    "license": "ISC",
    "dependencies": {
        "@zeit/next-sass": "^1.0.1",
        "babel-plugin-styled-components": "^1.10.0",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "firebase": "^6.2.0",
        "firebase-admin": "^8.2.0",
        "firebase-functions": "^3.0.1",
        "next": "^8.1.0",
        "next-images": "^1.1.1",
        "next-page-transitions": "^1.0.0-canary.1",
        "next-redux-wrapper": "^3.0.0-alpha.2",
        "next-routes": "^1.4.2",
        "node-sass": "^4.12.0",
        "nodemailer": "^6.2.1",
        "normalize.css": "^8.0.1",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-beautiful-dnd": "^11.0.4",
        "react-dom": "^16.8.6",
        "react-dropzone": "^10.1.5",
        "react-flip-move": "^3.0.3",
        "react-ga": "^2.5.7",
        "react-image-gallery": "^0.8.17",
        "react-photo-gallery": "^7.0.2",
        "react-redux": "^7.0.3",
        "react-responsive-modal": "^4.0.1",
        "react-select": "^3.0.4",
        "react-slick": "^0.24.0",
        "react-sortable-hoc": "^1.9.1",
        "recompose": "^0.30.0",
        "redux": "^4.0.1",
        "redux-devtools-extension": "^2.13.8",
        "redux-thunk": "^2.3.0",
        "styled-components": "^4.3.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "autoprefixer": "^9.5.0",
        "cpx": "^1.5.0",
        "cross-env": "^5.2.0",
        "firebase-functions-test": "^0.1.6",
        "firebase-tools": "^7.0.1",
        "rimraf": "^2.6.0"
    }
}
